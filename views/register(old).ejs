<%- include("partials/header") -%>
<div align="center">


  <form class="form-signin" action="/users/register" method="post">
    <img class="mb-4" src="/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
    <br><br>
    <p>

      <%- include("partials/messages", {errors: error}) %>
      </p>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name ="password" class="form-control" placeholder="Password" required>
    <div class="checkbox mb-3">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
  </form>
</div>

<%- include("partials/footer") -%>
